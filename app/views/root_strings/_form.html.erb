<%= form_for(@root_string) do |f| %>
  <% if @root_string.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@root_string.errors.count, "error") %> prohibited this string from being saved:</h2>

      <ul>
      <% @root_string.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :string %><br>
    <%= f.text_field :string, :autofocus=>true %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_field :comment, maxlength: "255" %>
  </div>

  <%= f.fields_for :translated_strings do |translated_string| %>
    <%= translated_string.hidden_field :language_id %>
    <div class="field">
    <%= translated_string.label :translation, "#{translated_string.object.language.langname} Translation" %><br>
    <%= translated_string.text_field :translation %>
  </div>
  <div class="field">
    <%= translated_string.label :comment, "#{translated_string.object.language.langname} Translator Comments" %><br>
    <%= translated_string.text_field :comment, maxlength: "255" %>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>
